.container {
  height: 100vh;
  background-color: #000;
  display: flex;
  flex-direction: column;
  color: #00ff00;
  font-family: 'Courier New', Courier, monospace;
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: scroll;
}

.message-item {
  margin-bottom: 30rpx;
}

.msg-header {
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.time {
  margin-right: 10rpx;
  opacity: 0.7;
}

.user-id {
  font-weight: bold;
}

.msg-body {
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
}

.system .msg-body {
  text-shadow: 0 0 5rpx rgba(0, 255, 0, 0.5);
}

.msg-image {
  max-width: 80%;
  border: 1px solid #00ff00;
  margin-top: 10rpx;
}

.msg-file {
  display: inline-block;
  padding: 10rpx 20rpx;
  border: 1px dashed #00ff00;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.typing-indicator {
  font-size: 20rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { opacity: 0.3; }
  50% { opacity: 1; }
  100% { opacity: 0.3; }
}

.input-area {
  background-color: #001100;
  border-top: 1px solid #004400;
  padding: 20rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.input-box {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.main-input {
  flex: 1;
  height: 70rpx;
  border: 1px solid #004400;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 70rpx;
  border: 1px solid #00ff00;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  font-size: 26rpx;
}

.tool-bar {
  display: flex;
  justify-content: space-between;
}

.tool-item {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #004400;
  opacity: 0.8;
}

.tool-item:active {
  background-color: #004400;
  opacity: 1;
}

.logout {
  color: #ff3b30;
  border-color: #440000;
}