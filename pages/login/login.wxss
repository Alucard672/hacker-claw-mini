.container {
  height: 100vh;
  background-color: #000;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #00ff00;
  font-family: 'Courier New', Courier, monospace;
}

.header {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.7;
}

.login-box {
  width: 80%;
}

.info-text {
  font-size: 26rpx;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.6;
}

.login-btn {
  background-color: transparent;
  color: #00ff00;
  border: 1px solid #00ff00;
  border-radius: 0;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.login-btn:active {
  background-color: #00ff00;
  color: #000;
}

.footer-note {
  margin-top: 40rpx;
  font-size: 20rpx;
  text-align: center;
  opacity: 0.5;
}